{
    "compilerOptions": {
        "outDir": "./dist",
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "noEmit": false,
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/setupTests.ts",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.test.js"
    ]
}
